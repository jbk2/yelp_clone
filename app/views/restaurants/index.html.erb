<% if @restaurants.any? %>

  <% @restaurants.each do |restaurant| %>
  <div class='restaurant'>

    <h2><em><%= restaurant.name %></h2></em>

    <%= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant) %>
    <%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant),
      method: :delete, data: { confirm: 'Are you sure?' } %>
    <%= link_to "Review #{restaurant.name}",
      new_restaurant_review_path(restaurant.id) %>

      <h4><%= pluralize(restaurant.reviews.count, 'review') %></h4>
      <h4>Average rating - <%= restaurant.average_rating %></h4> 
      <ul>
        <% restaurant.reviews.each do |review| %>
          <li>
            <strong><%= review.rating %></strong> - <%= review.thoughts %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

<% else %>

  <h1>No restaurants yet</h1>

<% end %>

<%= link_to 'Create a restaurant', new_restaurant_path %>
